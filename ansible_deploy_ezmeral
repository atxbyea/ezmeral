---
- name: Create Ezmeral cluster
  hosts: localhost
  connection: local
  gather_facts: no
  tasks:
  - name: Create gatewaylb
    vmware_guest:
      hostname: vcsa.vcflab.local
      username: administrator@vsphere.local
      password: Password123!
      validate_certs: False
      name: gatewaylb
      template: centos79-template
      datacenter: vcflab
      folder: /ezmerallab
      state: poweredon
      datastore: "SSD"
      networks:
        - name: VM Network
          type: static
          ip: 192.168.250.140
          gateway: 192.168.250.1
          domain: vcflab.local
          netmask: 255.255.255.0
      customization:
        hostname: "gatewaylb"
        dns_servers:
        - 192.168.250.5
